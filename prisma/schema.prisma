// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Status {
  id         String   @id @default(cuid())
  server     String
  mastodonId String?
  createdAt  DateTime @default(now())

  exact         Boolean?
  latitudeFrom  Float?
  latitudeTo    Float?
  longitudeFrom Float?
  longitudeTo   Float?
}
